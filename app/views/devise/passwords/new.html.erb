<div class="jumbotron" style="padding: 20px 72px 20px 68px;">
	<h2>Forgot your password?</h2>
		<div class="login span8 offset1">

			<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: 'form-horizontal' }) do |f| %>
			  <%= f.error_notification %>

			  <div class="form-inputs">
			    <%= f.input :email, :required => true, :autofocus => true, :label => "Email Address", :required => false %>
			  </div>
			</div>

  			<div class="form-actions">
			    <%= f.button :submit, "Reset Password", class: "btn btn-danger btn-large" %>
			 </div>

			 <% end %>

</div>

